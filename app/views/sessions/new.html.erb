<%= provide(:title, "Sign in") %>

<div class="container">
  <div class="col-md-4">
    <h1>Sign in</h1>
    <%= form_for(:session, :url => sessions_path) do |f| %>
        <%= f.label :username %>
        <%= f.text_field :username%>
        <%= f.label :password %>
        <%= f.password_field :password%>
        <%= f.submit "login", :class => "btn btn-small btn-success" %>
    <% end %>
    <p>New to fake-reddit? <%= link_to "Sign up now!", signup_path %> </p>
  </div>
</div>
