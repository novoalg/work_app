  <div class="row large-4 columns">
  <br/>
<%= form_for(@post, :url => posts_path, :method => :post) do |p| %>

<%= provide('title', "Submit a link post!") %>
<h4 align="center">Submit a link post!</h4>
<%= render 'shared/error_messages', :object => p.object %>
<%= p.hidden_field :is_link, :value => true %>
<%= p.label :title %>
<%= p.text_field :title %>
<%= p.label :url %>
<%= p.text_field :url %>
<%= p.label :choose_a_subname %>
<%= p.text_field :subname, :value => @subname %>

<%= p.submit "Submit", :class => "btn btn-small btn-primary"%>
<% end %>
</div>
